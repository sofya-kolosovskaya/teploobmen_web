@using HeatExchangeApp.Models
@model CalculationResult

@{
    ViewData["Title"] = "Результаты расчета";
    Layout = null;
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <style>
        body {
            padding-top: 70px;
            background-color: #f8f9fa;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .navbar {
            background-color: #0d6efd;
            box-shadow: 0 2px 4px rgba(0,0,0,.1);
        }

        .card {
            border: none;
            border-radius: 10px;
            box-shadow: 0 2px 10px rgba(0,0,0,.1);
            margin-bottom: 20px;
        }

        .card-header {
            background-color: #0d6efd;
            color: white;
            border-radius: 10px 10px 0 0 !important;
            font-weight: 600;
        }

        .chart-container {
            position: relative;
            height: 400px;
            width: 100%;
        }

        .table-responsive {
            max-height: 400px;
            overflow-y: auto;
        }

        .temp-positive {
            color: #dc3545;
            font-weight: bold;
        }

        .temp-negative {
            color: #198754;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <!-- Навигация -->
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top">
        <div class="container">
            <a class="navbar-brand" href="/Calculation">
                <i class="bi bi-thermometer-half"></i> HeatExchange
            </a>
            <div class="navbar-nav ms-auto">
                <a class="nav-link" href="/Calculation">
                    <i class="bi bi-calculator"></i> Новый расчет
                </a>
                <a class="nav-link" href="/History">
                    <i class="bi bi-clock-history"></i> История
                </a>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <h1 class="mb-4">
            <i class="bi bi-graph-up text-primary"></i> @Model.Name
        </h1>

        <!-- График температур -->
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="bi bi-bar-chart-line"></i> График распределения температур
                </h5>
            </div>
            <div class="card-body">
                <div class="chart-container">
                    <canvas id="temperatureChart"></canvas>
                </div>
            </div>
        </div>

        <!-- График разности температур -->
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="bi bi-graph-down"></i> График разности температур
                </h5>
            </div>
            <div class="card-body">
                <div class="chart-container">
                    <canvas id="differenceChart"></canvas>
                </div>
            </div>
        </div>

        <div class="row">
            <!-- Расчетные параметры -->
            <div class="col-md-4">
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="bi bi-calculator"></i> Расчетные параметры
                        </h5>
                    </div>
                    <div class="card-body">
                        <table class="table table-borderless">
                            <tr>
                                <td><strong>Площадь сечения:</strong></td>
                                <td>@Model.S.ToString("F3") м²</td>
                            </tr>
                            <tr>
                                <td><strong>Тепловой поток материала:</strong></td>
                                <td>@Model.Wm.ToString("F1") Вт</td>
                            </tr>
                            <tr>
                                <td><strong>Тепловой поток газа:</strong></td>
                                <td>@Model.Wg.ToString("F1") Вт</td>
                            </tr>
                            <tr>
                                <td><strong>Коэффициент m:</strong></td>
                                <td>@Model.M.ToString("F4")</td>
                            </tr>
                            <tr>
                                <td><strong>Безразмерная координата Y₀:</strong></td>
                                <td>@Model.Y0.ToString("F4")</td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Таблица результатов -->
            <div class="col-md-8">
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="bi bi-table"></i> Таблица результатов
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>y, м</th>
                                        <th>Температура материала t, °C</th>
                                        <th>Температура газа T, °C</th>
                                        <th>Разность температур Δt, °C</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.YCoordinates != null)
                                    {
                                        @for (int i = 0; i < Model.YCoordinates.Length; i++)
                                        {
                                            var diffClass = Model.TempDifference[i] >= 0 ? "temp-positive" : "temp-negative";
                                            <tr>
                                                <td>@Model.YCoordinates[i].ToString("F3")</td>
                                                <td>@Model.MaterialTemp[i].ToString("F1")</td>
                                                <td>@Model.GasTemp[i].ToString("F1")</td>
                                                <td class="@diffClass">
                                                    @Model.TempDifference[i].ToString("F1")
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Кнопки действий -->
        <div class="card">
            <div class="card-body">
                <div class="d-flex gap-2">
                    <a href="/Calculation" class="btn btn-primary">
                        <i class="bi bi-calculator"></i> Новый расчет
                    </a>
                    <a href="/History" class="btn btn-outline-primary">
                        <i class="bi bi-clock-history"></i> История расчетов
                    </a>
                    <button onclick="window.print()" class="btn btn-outline-secondary ms-auto">
                        <i class="bi bi-printer"></i> Печать
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // Данные для графиков
        const labels = @Html.Raw(Json.Serialize(Model.YCoordinates));
        const materialTemp = @Html.Raw(Json.Serialize(Model.MaterialTemp));
        const gasTemp = @Html.Raw(Json.Serialize(Model.GasTemp));
        const tempDifference = @Html.Raw(Json.Serialize(Model.TempDifference));

        // График температур
        const tempCtx = document.getElementById('temperatureChart').getContext('2d');
        new Chart(tempCtx, {
            type: 'line',
            data: {
                labels: labels,
                datasets: [
                    {
                        label: 'Температура материала t, °C',
                        data: materialTemp,
                        borderColor: '#dc3545',
                        backgroundColor: 'rgba(220, 53, 69, 0.1)',
                        borderWidth: 3,
                        tension: 0.1,
                        fill: true
                    },
                    {
                        label: 'Температура газа T, °C',
                        data: gasTemp,
                        borderColor: '#0d6efd',
                        backgroundColor: 'rgba(13, 110, 253, 0.1)',
                        borderWidth: 3,
                        tension: 0.1,
                        fill: true
                    }
                ]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    title: {
                        display: true,
                        text: 'Распределение температур по высоте слоя'
                    }
                },
                scales: {
                    x: {
                        title: {
                            display: true,
                            text: 'Высота y, м'
                        }
                    },
                    y: {
                        title: {
                            display: true,
                            text: 'Температура, °C'
                        }
                    }
                }
            }
        });

        // График разности температур
        const diffCtx = document.getElementById('differenceChart').getContext('2d');
        new Chart(diffCtx, {
            type: 'line',
            data: {
                labels: labels,
                datasets: [{
                    label: 'Разность температур Δt, °C',
                    data: tempDifference,
                    borderColor: '#198754',
                    backgroundColor: 'rgba(25, 135, 84, 0.1)',
                    borderWidth: 3,
                    tension: 0.1,
                    fill: true
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    title: {
                        display: true,
                        text: 'Разность температур между материалом и газом'
                    }
                },
                scales: {
                    x: {
                        title: {
                            display: true,
                            text: 'Высота y, м'
                        }
                    },
                    y: {
                        title: {
                            display: true,
                            text: 'Разность температур, °C'
                        }
                    }
                }
            }
        });

        
    </script>
</body>
</html>